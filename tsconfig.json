{
  "compilerOptions": {
    "outDir": "bin/",
    "declaration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "useUnknownInCatchVariables": false,
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}