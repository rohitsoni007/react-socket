{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "skipLibCheck": true,
    "sourceMap": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      // "node",
      // "jest"
    ]
  },
  "include": ["bin"],
  "exclude": ["node_modules"]
}