{
  "name": "react-socket-client",
  "version": "1.0.3",
  "description": "React.js wrapper for Socket.IO Client - Real-time WebSocket communication library for React applications with hooks and TypeScript support",
  "main": "bin/index.js",
  "types": "bin/index.d.ts",
  "scripts": {
    "build": "tsc && npx babel src --out-dir bin --extensions \".js,.jsx,.ts,.tsx\" --ignore \"**/*.test.js,**/*.spec.js\"",
    "build:optimized": "npx babel src --out-dir bin --extensions \".js,.jsx,.ts,.tsx\" --ignore \"**/*.test.js,**/*.spec.js\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check src/",
    "clean": "rimraf bin",
    "prepack": "npm run build",
    "publish": "npm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm test && npm run format:check"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <20.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-import-assertions": "^7.27.1",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "babel-plugin-react-compiler": "^1.0.0",
    "babel-plugin-tsconfig-paths": "^1.0.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "rimraf": "^6.1.2",
    "socket.io": "^4.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohitsoni007/react-socket.git"
  },
  "keywords": [
    "react",
    "socket.io",
    "websocket",
    "realtime",
    "real-time",
    "socket.io-client",
    "hooks",
    "typescript",
    "chat",
    "messaging",
    "communication",
    "websockets",
    "react-hooks",
    "socket",
    "io",
    "realtime-communication",
    "websocket-client",
    "react-component",
    "frontend",
    "ui"
  ],
  "author": "Rohit Soni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rohitsoni007/react-socket/issues"
  },
  "homepage": "https://github.com/rohitsoni007/react-socket#readme"
}
